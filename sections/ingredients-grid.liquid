{{ 'swiper-bundle.min.css' | asset_url | stylesheet_tag }}
{{ 'section-multicol.css' | asset_url | stylesheet_tag }}

{% assign background_rgb = section.settings.background_color | color_to_rgb %}{% assign text_rgb = section.settings.text_color | color_to_rgb %}

{% comment %} Get ingredients from selected product {% endcomment %}
{% if section.settings.product %}
  {% assign selected_product = section.settings.product %}
  {% assign ingredients = selected_product.metafields.custom.ingredients.value %}
{% else %}
  {% assign ingredients = null %}
{% endif %}

<style>
  [data-section-id="{{ section.id }}"] {
    {% if background_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --color-background: {{ section.settings.background_color }};
    {% endif %}
    {% if text_rgb != 'rgba(0, 0, 0, 0.0)' %}
      --color-custom-text: {{ section.settings.text_color }};
    {% endif %}

    {% if section.settings.margin_top %}
      --section-gap-top: {{ section.settings.margin_top }}px;
    {% endif %}

    {% if section.settings.margin_bottom %}
      --section-gap-bottom: {{ section.settings.margin_bottom }}px;
    {% endif %}
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid {
    padding: var(--section-gap-top, 40px) 0 var(--section-gap-bottom, 40px);
    background-color: var(--color-background, transparent);
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__container {
    max-width: var(--site-max-width);
    padding-left: calc(var(--gap, 8px) * 2);
    padding-right: calc(var(--gap, 8px) * 2);
    margin-left: auto;
    margin-right: auto;
  }

  @media (min-width: 1200px) {
    [data-section-id="{{ section.id }}"] .ingredients-grid__container {
      padding-left: calc(calc(var(--gap, 8px) * 2) + calc(var(--gap, 8px) * 2));
      padding-right: calc(calc(var(--gap, 8px) * 2) + calc(var(--gap, 8px) * 2));
    }
  }

  @media (min-width: 1800px) {
    [data-section-id="{{ section.id }}"] .ingredients-grid__container {
      max-width: var(--site-max-width-big);
    }
  }

  /* Main layout - Desktop: 25% title, 75% grid */
  [data-section-id="{{ section.id }}"] .ingredients-grid__layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 40px;
    align-items: start;
  }

  @media (min-width: 768px) {
    [data-section-id="{{ section.id }}"] .ingredients-grid__layout {
      grid-template-columns: 1fr 3fr;
      gap: 60px;
    }
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__header {
    text-align: left;
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__subtitle {
    font-size: calc(var(--font-base-size, 1rem) * 0.875);
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--color-custom-text, #666);
    margin-bottom: 0.75rem;
    font-weight: 500;
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__title {
    --font-headline-scale-desk: {{ section.settings.size_heading | divided_by: 100.0 }};
    --font-headline-scale: {{ section.settings.size_heading_mobile | divided_by: 100.0 }};
    font-size: calc(18px * var(--font-headline-scale, 1));
    line-height: 0.9;
    margin: 0;
  }

  @media (min-width: 768px) {
    [data-section-id="{{ section.id }}"] .ingredients-grid__title {
      font-size: calc(24px * var(--font-headline-scale-desk, 1));
    }
  }

  /* Ingredient Grid Layout */
  [data-section-id="{{ section.id }}"] .wt-multicol__list {
    display: grid;
    grid-template-columns: 1fr;
    gap: 24px;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  @media (min-width: 768px) {
    [data-section-id="{{ section.id }}"] .wt-multicol__list {
      grid-template-columns: repeat(3, 1fr);
      gap: 24px;
    }
  }

  /* Override multicol padding for our grid */
  [data-section-id="{{ section.id }}"] .wt-multicol {
    padding: 0;
    max-width: none;
    margin: 0;
  }

  /* Desktop: Force grid layout, override any swiper styles */
  @media (min-width: 900px) {
    [data-section-id="{{ section.id }}"] .wt-multicol__list {
      display: grid !important;
      grid-template-columns: repeat(3, 1fr) !important;
      gap: 24px !important;
    }
  }

  /* Mobile: Override grid for swiper when enabled */
  @media (max-width: 899px) {
    [data-section-id="{{ section.id }}"] .wt-multicol[data-swiper] .wt-multicol__list {
      display: flex;
      grid-template-columns: none;
      gap: 0;
    }
  }

  /* Ingredient Cards */
  [data-section-id="{{ section.id }}"] .ingredients-grid__card {
    background: transparent;
    border-radius: 0;
    overflow: visible;
    box-shadow: none;
    transition: none;
    height: 100%;
    display: flex;
    flex-direction: column;
    cursor: pointer;
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__card:hover {
    box-shadow: none;
    transform: none;
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__card-image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
    background: transparent;
    border-radius: var(--border-radius);
    margin-bottom: 20px;
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: none;
    border-radius: var(--border-radius);
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__card-content {
    padding: 0;
    display: flex;
    flex-direction: column;
    flex: 1;
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__card-name {
    --font-headline-scale-desk: {{ section.settings.ingredient_name_size_desktop | divided_by: 100.0 }};
    --font-headline-scale: {{ section.settings.ingredient_name_size_mobile | divided_by: 100.0 }};
    font-size: calc(18px * var(--font-headline-scale, 1));
    font-weight: 700;
    color: var(--color-custom-text, #000);
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1.2;
    margin: 0 0 8px 0;
  }

  @media (min-width: 768px) {
    [data-section-id="{{ section.id }}"] .ingredients-grid__card-name {
      font-size: calc(24px * var(--font-headline-scale-desk, 1));
    }
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__card-scientific {
    font-size: calc(var(--font-base-size, 1rem) * 0.875);
    line-height: 1.4;
    color: var(--color-custom-text, #666);
    text-transform: uppercase;
    letter-spacing: 0.3px;
    margin: 0 0 12px 0;
    font-weight: 500;
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__card-description {
    font-size: calc(var(--font-base-size, 1rem) * 0.875);
    line-height: 1.5;
    color: #666;
    margin: 0;
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__empty {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-style: italic;
  }

  /* Modal Styles */
  [data-section-id="{{ section.id }}"] .ingredient-modal {
    position: relative;
  }

  [data-section-id="{{ section.id }}"] .ingredient-modal .modal__content {
    background: white;
    max-width: 600px;
    width: 90vw;
    max-height: 90vh;
    overflow-y: auto;
    border-radius: var(--border-radius);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.15);
  }

  [data-section-id="{{ section.id }}"] .ingredient-modal__content {
    padding: 0;
    position: relative;
  }

  [data-section-id="{{ section.id }}"] .ingredient-modal__close {
    position: absolute;
    top: 16px;
    right: 16px;
    z-index: 10;
    background: white;
    border: none;
    border-radius: 50%;
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  [data-section-id="{{ section.id }}"] .ingredient-modal__image {
    width: 100%;
    height: 300px;
    object-fit: cover;
    display: block;
  }

  [data-section-id="{{ section.id }}"] .ingredient-modal__body {
    padding: 24px;
  }

  [data-section-id="{{ section.id }}"] .ingredient-modal__name {
    font-size: calc(var(--font-h2-size, 1.5rem) * 1.2);
    font-weight: 700;
    color: #000;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    line-height: 1.2;
    margin: 0 0 16px 0;
  }

  [data-section-id="{{ section.id }}"] .ingredient-modal__description {
    font-size: var(--font-base-size, 1rem);
    line-height: 1.6;
    color: #333;
    margin: 0;
  }

  [data-section-id="{{ section.id }}"] .ingredient-modal__description p {
    margin: 0 0 16px 0;
  }

  [data-section-id="{{ section.id }}"] .ingredient-modal__description p:last-child {
    margin-bottom: 0;
  }

  /* Mobile modal adjustments */
  @media (max-width: 767px) {
    [data-section-id="{{ section.id }}"] .ingredient-modal .modal__content {
      width: 95vw;
      max-height: 85vh;
    }

    [data-section-id="{{ section.id }}"] .ingredient-modal__image {
      height: 250px;
    }

    [data-section-id="{{ section.id }}"] .ingredient-modal__body {
      padding: 20px;
    }

    [data-section-id="{{ section.id }}"] .ingredient-modal__name {
      font-size: calc(var(--font-h3-size, 1.25rem) * 1.1);
    }
  }

  /* Swiper Styles */
  [data-section-id="{{ section.id }}"] .ingredients-slider {
    position: relative;
    overflow: hidden;
  }

  [data-section-id="{{ section.id }}"] .ingredients-grid__list {
    overflow: visible;
  }

  /* Hide scrollbar on desktop */
  @media (min-width: 900px) {
    [data-section-id="{{ section.id }}"] .wt-slider__scrollbar {
      display: none !important;
    }
  }
</style>

<script src="{{ 'details-modal.js' | asset_url }}" defer></script>

<section data-section-id="{{ section.id }}" class="ingredients-grid">
  <div class="ingredients-grid__container">
    <div class="ingredients-grid__layout">
      <!-- Left Column: Product Title -->
      <div class="ingredients-grid__header">
        {% if selected_product %}
          <h2 class="ingredients-grid__title">{{ selected_product.title }}</h2>
        {% elsif section.settings.fallback_title != blank %}
          <h2 class="ingredients-grid__title">{{ section.settings.fallback_title }}</h2>
        {% endif %}
      </div>

      <!-- Right Column: Ingredient Grid -->
      <div class="ingredients-grid__content">
        {% if ingredients != blank %}
          {% if section.settings.swipe_on_mobile %}
            <slideshow-section
              class="wt-slider ingredients-slider"
              id="{{ section.id }}"
            >
          {% else %}
            <div
              class="wt-slider ingredients-slider"
              id="{{ section.id }}"
            >
          {% endif %}

          <div
            data-swiper
            class="wt-multicol ingredients-grid__list"
          >
            <ul
              data-swiper-container
              class="wt-multicol__list"
            >
            {%- for ingredient in ingredients -%}
              <li data-swiper-slide class="wt-multicol__item">
                <details-modal class="ingredient-modal">
                  <details class="modal">
                    <summary class="ingredients-grid__card" aria-haspopup="dialog">
                {% if ingredient.image.value %}
                  <div class="ingredients-grid__card-image">
                    {{
                      ingredient.image.value | image_url: width: 600 | image_tag: loading: 'lazy', sizes: '(min-width: 768px) 400px, 600px', widths: '400, 600, 800', alt: ingredient.name.value
                    }}
                  </div>
                {% endif %}

                      <div class="ingredients-grid__card-content">
                        {% if ingredient.name.value %}
                          <h3 class="ingredients-grid__card-name">{{ ingredient.name.value }}</h3>
                        {% endif %}

                        {% if ingredient.scientific_name.value %}
                          <div class="ingredients-grid__card-scientific">{{ ingredient.scientific_name.value }}</div>
                        {% endif %}

                        {% if ingredient.short_description.value %}
                          <div class="ingredients-grid__card-description">{{ ingredient.short_description.value }}</div>
                        {% endif %}
                      </div>
                    </summary>

                    <div class="modal__content" role="dialog" aria-modal="true">
                      <div class="ingredient-modal__content" tabindex="-1">
                        <button type="button" class="ingredient-modal__close" aria-label="Close">
                          <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                            <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                          </svg>
                        </button>

                        {% if ingredient.image.value %}
                          {{
                            ingredient.image.value | image_url: width: 800 | image_tag: class: 'ingredient-modal__image', loading: 'lazy', alt: ingredient.name.value
                          }}
                        {% endif %}

                        <div class="ingredient-modal__body">
                          {% if ingredient.name.value %}
                            <h2 class="ingredient-modal__name">{{ ingredient.name.value }}</h2>
                          {% endif %}

                          {% if ingredient.long_description.value %}
                            <div class="ingredient-modal__description">{{ ingredient.long_description.value }}</div>
                          {% elsif ingredient.short_description.value %}
                            <div class="ingredient-modal__description">{{ ingredient.short_description.value }}</div>
                          {% endif %}
                        </div>
                      </div>
                    </div>
                  </details>
                </details-modal>
              </li>
            {%- endfor -%}
          </ul>

          <div class="swiper-scrollbar wt-slider__scrollbar wt-slider__scrollbar--ingredients"></div>
        </div>

          {% assign slidesPerView = 1 %}

          <script data-swiper-configuration type="text/json">
            {
              "enableOnMedia": "(max-width: 899px)",
              "slidesPerView": {{ slidesPerView }},
              "spaceBetween": 16,
              "resistanceRatio": 0,
              "watchOverflow": true,
              "scrollbar": {
                "el": ".wt-slider__scrollbar--ingredients",
                "draggable": true
              }
            }
          </script>
        </div>

        {% if section.settings.swipe_on_mobile %}
          </slideshow-section>
        {% else %}
          </div>
        {% endif %}
        {% else %}
          <div class="ingredients-grid__empty">
            {% if section.settings.product %}
              <p>No ingredients found for this product. Please add ingredients to the product's metafields.</p>
            {% else %}
              <p>Please select a product in the section settings to display its ingredients.</p>
            {% endif %}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Ingredients Grid",
    "tag": "section",
    "settings": [
      {
        "type": "header",
        "content": "Content"
      },
      {
        "type": "product",
        "id": "product",
        "label": "Product",
        "info": "Select the product whose ingredients you want to display"
      },
      {
        "type": "text",
        "id": "fallback_title",
        "label": "Fallback Title",
        "default": "INGREDIENTS",
        "info": "Title to show if no product is selected"
      },
      {
        "type": "header",
        "content": "Typography"
      },
      {
        "type": "range",
        "id": "size_heading_mobile",
        "min": 80,
        "max": 300,
        "step": 10,
        "default": 100,
        "label": "Title size (mobile)",
        "unit": "%"
      },
      {
        "type": "range",
        "id": "size_heading",
        "min": 100,
        "max": 500,
        "step": 10,
        "default": 100,
        "label": "Title size (desktop)",
        "unit": "%"
      },
      {
        "type": "range",
        "id": "ingredient_name_size_mobile",
        "min": 80,
        "max": 300,
        "step": 10,
        "default": 100,
        "label": "Ingredient name size (mobile)",
        "unit": "%"
      },
      {
        "type": "range",
        "id": "ingredient_name_size_desktop",
        "min": 100,
        "max": 500,
        "step": 10,
        "default": 100,
        "label": "Ingredient name size (desktop)",
        "unit": "%"
      },
      {
        "type": "header",
        "content": "Colors"
      },
      {
        "type": "color",
        "id": "text_color",
        "label": "Text color",
        "default": "transparent"
      },
      {
        "type": "color",
        "id": "background_color",
        "label": "Background color",
        "default": "transparent"
      },
      {
        "type": "header",
        "content": "Section spacing"
      },
      {
        "type": "range",
        "id": "margin_top",
        "min": 0,
        "max": 100,
        "step": 4,
        "default": 40,
        "unit": "px",
        "label": "Top margin"
      },
      {
        "type": "range",
        "id": "margin_bottom",
        "min": 0,
        "max": 100,
        "step": 4,
        "default": 40,
        "unit": "px",
        "label": "Bottom margin"
      },
      {
        "type": "checkbox",
        "id": "swipe_on_mobile",
        "default": true,
        "label": "Enable mobile swipe"
      },
      {
        "type": "header",
        "content": "Instructions"
      },
      {
        "type": "paragraph",
        "content": "This section displays ingredients from the selected product's 'ingredients' metafield. Each ingredient should be a metaobject with 'ingredient.name', 'ingredient.short_description', 'ingredient.long_description', 'ingredient.scientific_name' and 'ingredient.image' fields. Click any ingredient to view detailed information in a modal."
      }
    ],
    "presets": [
      {
        "name": "Ingredients Grid"
      }
    ]
  }
{% endschema %}