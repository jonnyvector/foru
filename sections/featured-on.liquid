{{ 'section-featured-on.css' | asset_url | stylesheet_tag }}
{{ 'swiper.css' | asset_url | stylesheet_tag }}

{% assign background_rgb = section.settings.background_color | color_to_rgb %}
{% assign text_rgb = section.settings['color-body-text'] | color_to_rgb %}

<style>
  [data-section-id="{{ section.id }}"]
  {
  {% if section.settings.margin-top %}
    --section-gap-top: {{ section.settings.margin-top }}px;
  {% endif %}

  {% if section.settings.margin-bottom %}
    --section-gap-bottom: {{ section.settings.margin-bottom }}px;
  {% endif %}

  {% if background_rgb != 'rgba(0, 0, 0, 0.0)' %}
    --color-background: {{ section.settings.background_color }};
  {% endif %}

  {% if text_rgb != 'rgba(0, 0, 0, 0.0)' %}
    --color-custom-text: {{ section.settings.color-body-text }};
  {% endif %}
  }
</style>

<div
  data-section-id="{{ section.id }}"
  class="wt-slider wt-featured-on__container"
>
  {% render 'headline', title: section.settings.heading %}

  <slideshow-section class="wt-slider slide-in" data-featured-on="true">

  <div
    data-swiper
    class="wt-slider__container--featured wt-featured-on__wrapper"
  >
    <!-- Additional required wrapper -->
    <div
      data-swiper-container
      class="wt-featured-on wt-featured-on--desktop-grid swiper"
    >
      {% for block in section.blocks %}
        <div
          data-swiper-slide
          class="wt-featured-on__item"
        >
          <div
            {% if settings.animations %}
              data-cascade
              style="--animation-order: {{ forloop.index }};"
            {% endif %}
          >
            {% if block.settings.link != blank %}
              <a
                href="{{ block.settings.link }}"
                class="wt-featured-on__link"
                aria-label="Visit {{ block.settings.logo.alt | default: 'partner site' }}"
                {% if block.settings.open_in_new_tab %}target="_blank" rel="noopener noreferrer"{% endif %}
              >
            {% endif %}
              {% if block.settings.logo != blank %}
                {% assign alt_text = block.settings.logo.alt | escape %}
                {{
                  block.settings.logo
                  | image_url: width: 200
                  | image_tag:
                    sizes: '(max-width: 768px) 120px, 200px',
                    widths: '120, 200, 400',
                    alt: alt_text,
                    loading: 'lazy',
                    class: 'wt-featured-on__logo'
                }}
              {% else %}
                <div class="wt-featured-on__logo wt-featured-on__logo--placeholder">
                  {{ 'image' | placeholder_svg_tag: 'wt-featured-on__logo-placeholder' }}
                </div>
              {% endif %}
            {% if block.settings.link != blank %}
              </a>
            {% endif %}
          </div>
        </div>
      {% endfor %}
    </div>

    <div class="swiper-button-next wt-slider__nav-btn wt-slider__nav-next wt-slider__nav-next--featured-on">
      {% render 'icons', id: 'arrow-right' %}
    </div>
    <div class="swiper-button-prev wt-slider__nav-btn wt-slider__nav-prev wt-slider__nav-prev--featured-on">
      {% render 'icons', id: 'arrow-left' %}
    </div>
    <div class="swiper-pagination wt-slider__pagination"></div>
  </div>

  <script data-swiper-configuration type="text/json">
      {
        "enableOnMedia": "(max-width: 768px)",
        "spaceBetween": 24,
        "freeMode": false,
        "speed": 150,
        "autoplay": {
          "delay": 3000,
          "disableOnInteraction": false,
          "pauseOnMouseEnter": true
        },
        "loop": true,
        "grabCursor": true,
        "paginationType": "bullets",
        "breakpoints": {
          "320": {
            "slidesPerView": 2,
            "slidesPerGroup": 2,
            "spaceBetween": 16
          },
          "480": {
            "slidesPerView": 2,
            "slidesPerGroup": 2,
            "spaceBetween": 24
          }
        },
        "navigation": {
          "nextEl": ".wt-slider__nav-next--featured-on",
          "prevEl": ".wt-slider__nav-prev--featured-on"
        }
      }
  </script>
  </slideshow-section>
</div>

{% schema %}
{
  "name": "Featured On",
  "tag": "section",
  "settings": [
    {
      "type": "textarea",
      "id": "heading",
      "label": "Heading",
      "default": "Featured On"
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "color-body-text",
      "default": "transparent",
      "label": "Text color"
    },
    {
      "type": "color",
      "id": "background_color",
      "default": "transparent",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Section spacing"
    },
    {
      "type": "range",
      "id": "margin-top",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 20,
      "unit": "px",
      "label": "Top margin"
    },
    {
      "type": "range",
      "id": "margin-bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 20,
      "unit": "px",
      "label": "Bottom margin"
    }
  ],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "logo",
          "label": "Logo image"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link (optional)"
        },
        {
          "type": "checkbox",
          "id": "open_in_new_tab",
          "label": "Open link in new tab",
          "default": false
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Featured On",
      "blocks": [
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        },
        {
          "type": "logo"
        }
      ]
    }
  ],
  "disabled_on": {
    "groups": ["header", "footer"]
  }
}
{% endschema %}