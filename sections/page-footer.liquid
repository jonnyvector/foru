<style>
  [id="shopify-section-{{ section.id }}"]
  {
          --section-gap-top: {{ section.settings.margin-top }}px;
          --section-gap-bottom: {{ section.settings.margin-bottom }}px;
          --big-logo-width: {{ section.settings.big-logo-width }}%;
  }

  {%- for block in section.blocks -%}
    [data-block-id="{{ block.id }}"]
    {
      --size-image: {{ block.settings.image-width }}px;
    }
  {%- endfor -%}

  /* Footer Grid Layout */
  .wt-footer__grid {
    max-width: var(--site-max-width);
    margin: 0 auto;
    padding-left: calc(var(--gap, 8px) * 2);
    padding-right: calc(var(--gap, 8px) * 2);
    display: grid;
    gap: calc(var(--gap, 8px) * 4);
  }

  @media (min-width: 1200px) {
    .wt-footer__grid {
      padding-left: calc(calc(var(--gap, 8px) * 2) + calc(var(--gap, 8px) * 2));
      padding-right: calc(calc(var(--gap, 8px) * 2) + calc(var(--gap, 8px) * 2));
    }
  }

  /* Desktop Grid Layout (4 rows) */
  @media (min-width: 750px) {
    /* Row 1: Newsletter + Menus (2 columns: 50% newsletter, 50% menus) */
    .wt-footer__row--main {
      display: grid;
      grid-template-columns: 50% 50%;
      gap: calc(var(--gap, 8px) * 3);
      align-items: start;
    }
    
    .wt-footer__menus-container {
      display: flex;
      gap: calc(var(--gap, 8px) * 6);
      width: 100%;
    }

    /* Row 2: Social Media (positioned like right column, left-aligned within that column) */
    .wt-footer__row--social {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: calc(var(--gap, 8px) * 3);
    }
    
    .wt-footer__row--social .wt-footer__grid-item--social {
      grid-column: 2;
      justify-self: start;
    }

    /* Row 3: Payment + Disclaimer (2 columns) */
    .wt-footer__row--secondary {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: calc(var(--gap, 8px) * 3);
      align-items: center;
    }

    /* Row 4: Copyright + Policies (2 columns) */
    .wt-footer__row--footer {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: calc(var(--gap, 8px) * 3);
      align-items: center;
      border-top: 1px solid rgba(var(--color-foreground-rgb), 0.1);
      padding-top: calc(var(--gap, 8px) * 3);
    }

    .wt-footer__grid-item--policies {
      text-align: right;
    }

    .wt-footer__grid-item--disclaimer {
      text-align: right;
    }
  }

  /* Mobile Grid Layout (7 rows, single column) */
  @media (max-width: 749px) {
    .wt-footer__grid {
      grid-template-areas: 
        "newsletter"
        "menus" 
        "social"
        "disclaimer"
        "payment"
        "policies"
        "copyright";
    }

    .wt-footer__row--main {
      display: contents;
    }

    .wt-footer__grid-item--newsletter {
      grid-area: newsletter;
    }

    .wt-footer__grid-item--menu {
      grid-area: menus;
    }

    .wt-footer__row--social {
      grid-area: social;
      justify-content: center;
    }

    .wt-footer__row--secondary {
      display: contents;
    }

    .wt-footer__grid-item--disclaimer {
      grid-area: disclaimer;
      text-align: center;
    }

    .wt-footer__grid-item--payment {
      grid-area: payment;
      text-align: center;
    }

    .wt-footer__row--footer {
      display: contents;
    }

    .wt-footer__grid-item--policies {
      grid-area: policies;
      text-align: center;
    }

    .wt-footer__grid-item--copyright {
      grid-area: copyright;
      text-align: center;
    }
  }

  /* Grid Item Styles */
  .wt-footer__grid-item {
    min-width: 0;
  }

  /* Social Media Icons */
  .wt-footer__social-icons {
    display: flex;
    gap: calc(var(--gap, 8px) * 2);
    justify-content: flex-end;
  }

  @media (max-width: 749px) {
    .wt-footer__social-icons {
      justify-content: center;
    }
  }

  /* Payment Icons */
  .wt-footer__payment-icons .wt-footer__aside-list {
    display: flex;
    gap: calc(var(--gap, 8px) * 1);
    list-style: none;
    padding: 0;
    margin: 0;
    justify-content: flex-start;
  }

  @media (max-width: 749px) {
    .wt-footer__payment-icons .wt-footer__aside-list {
      justify-content: center;
    }
  }

  .wt-footer__payment-icons .wt-footer__aside-list__item {
    display: flex;
    align-items: center;
  }

  /* Disclaimer Text */
  .wt-footer__disclaimer-text {
    font-size: 0.9rem;
    opacity: 0.8;
  }

  /* Hide empty rows */
  .wt-footer__row:empty {
    display: none;
  }

  /* Policies Menu Styling */
  .wt-footer__policies-list {
    display: flex;
    gap: calc(var(--gap, 8px) * 2);
    list-style: none;
    padding: 0;
    margin: 0;
    justify-content: flex-end;
  }

  @media (max-width: 749px) {
    .wt-footer__policies-list {
      flex-wrap: wrap;
      justify-content: center;
      max-width: 100%;
    }
    
    .wt-footer__policies-item {
      flex-basis: calc(50% - calc(var(--gap, 8px) * 1));
      text-align: center;
    }
  }

  .wt-footer__policies-link {
    color: var(--color-foreground);
    text-decoration: none;
    font-size: 0.9rem;
  }

  .wt-footer__policies-link .slide-wrapper {
    position: relative;
    display: inline-block;
    overflow: hidden;
  }

  .wt-footer__policies-link .slide-text {
    display: block;
    transition: transform 0.32s cubic-bezier(0.22, 0.61, 0.36, 1);
  }

  .wt-footer__policies-link .slide-text:last-child {
    position: absolute;
    top: 0;
    left: 0;
    transform: translateY(100%);
  }

  .wt-footer__policies-link:hover .slide-text:first-child {
    transform: translateY(-100%);
  }

  .wt-footer__policies-link:hover .slide-text:last-child {
    transform: translateY(0);
  }

  /* Legacy blocks styling */
  .wt-footer__row--legacy {
    display: grid;
    gap: calc(var(--gap, 8px) * 3);
  }

  @media (min-width: 750px) {
    .wt-footer__row--legacy {
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    }
  }
</style>

<footer class="wt-footer">
  <!-- Footer Grid Container -->
  <div class="wt-footer__grid">
    <!-- Collect blocks by type for organized layout -->
    {% assign newsletter_blocks = section.blocks | where: 'type', 'newsletter' %}
    {% assign menu_blocks = section.blocks | where: 'type', 'menu' %}
    {% assign social_blocks = section.blocks | where: 'type', 'social_links' %}
    {% assign payment_blocks = section.blocks | where: 'type', 'payment_icons' %}
    {% assign disclaimer_blocks = section.blocks | where: 'type', 'disclaimer' %}
    {% assign other_blocks = section.blocks | where: 'type', 'text' | concat: section.blocks | where: 'type', 'image' | concat: section.blocks | where: 'type', 'custom_liquid' | concat: section.blocks | where: 'type', '@app' %}

    <!-- Desktop Row 1 / Mobile Rows 1-2: Newsletter + Menus -->
    <div class="wt-footer__row wt-footer__row--main">
      <!-- Newsletter -->
      {% for newsletter_block in newsletter_blocks %}
        <div class="wt-footer__grid-item wt-footer__grid-item--newsletter">
          <section class="wt-newsletter wt-footer__additional">
            <div class="wt-footer__title wt-newsletter__title">{{ newsletter_block.settings.heading_newsletter }}</div>
            <div class="wt-footer__text rte">{{ newsletter_block.settings.text_newsletter }}</div>

            {% form 'customer', class: 'newsletter-form wt-newsletter__form wt-footer__additional__form' %}
              <input type="hidden" name="contact[tags]" value="newsletter">
              <div class="wt-newsletter__fieldset">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="wt-newsletter__field"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  placeholder="{{ 'newsletter.label' | t }}"
                  required
                >
                <button
                  type="submit"
                  class="wt-newsletter__send wt-newsletter__send--{{ newsletter_block.settings.button_type }}"
                  name="commit"
                  aria-label="{{ 'newsletter.button_label' | t }}"
                >
                  <span class="wt-newsletter__send__text">
                    {{ 'newsletter.button_label' | t }}
                  </span>
                </button>
              </div>
              {%- if form.errors -%}
                {% for error in form.errors %}
                  <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
                    {%- render 'icon-error' -%}
                    {% if error == 'form' %}
                      {{ form.errors.messages[error] }}
                    {% else %}
                      {{ form.errors.translated_fields[error] }} - {{ form.errors.messages[error] }}
                    {% endif %}
                  </small>
                {% endfor %}
              {%- endif -%}
              {%- if form.posted_successfully? -%}
                <div class="form__message">
                  <div class="form__success-field" tabindex="-1" autofocus>
                    <p>{{- 'newsletter.success' | t }}</p>
                  </div>
                </div>
              {%- endif -%}
            {% endform %}
          </section>
        </div>
      {% endfor %}

      <!-- Menus -->
      {% for menu_block in menu_blocks %}
        <div class="wt-footer__grid-item wt-footer__grid-item--menu">
          {% if menu_block.settings.heading_links != empty %}
            <collapsible-section
              class="wt-footer__links wt-collapse"
              data-toggle-tabindex="button, [href], input, a"
              data-mobile-only
            >
              <div
                class="wt-footer__title wt-collapse__trigger"
                role="button"
                tabindex="0"
                data-open="false"
                aria-expanded="false"
                aria-controls="CollapsibleTab-{{ menu_block.id }}"
              >
                <div>{{ menu_block.settings.heading_links }}</div>
                <div class="wt-footer__title__icon wt-icon" aria-hidden="true">
                  {% render 'icons', id: 'plus' %}
                </div>
              </div>
              <div class="wt-collapse__target wt-collapse__target--v2" id="CollapsibleTab-{{ menu_block.id }}">
                <ul class="wt-footer__list">
                  {%- for link in menu_block.settings.links.links -%}
                    <li class="wt-footer__list__item">
                      <a href="{{ link.url }}" class="{% if link.active %} list-menu__item--active{% endif %}">
                        <span class="wt-footer__list__item__text--underline slide-wrapper">
                        <span class="slide-text">{{ link.title }}</span>
                        <span class="slide-text">{{ link.title }}</span>
                      </span>
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            </collapsible-section>
          {% else %}
            <div class="wt-footer__links wt-footer__links--no-heading">
              <ul class="wt-footer__list">
                {%- for link in menu_block.settings.links.links -%}
                  <li class="wt-footer__list__item">
                    <a href="{{ link.url }}" class="{% if link.active %} list-menu__item--active{% endif %}">
                      <span class="wt-footer__list__item__text--underline slide-wrapper">
                        <span class="slide-text">{{ link.title }}</span>
                        <span class="slide-text">{{ link.title }}</span>
                      </span>
                    </a>
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          {% endif %}
        </div>
      {% endfor %}
    </div>

    <!-- Desktop Row 2 / Mobile Row 3: Social Media -->
    <div class="wt-footer__row wt-footer__row--social">
      {% for social_block in social_blocks %}
        <div class="wt-footer__grid-item wt-footer__grid-item--social">
          <section class="wt-footer__social">
            {%- if social_block.settings.heading != blank -%}
              <div class="wt-footer__title">{{ social_block.settings.heading }}</div>
            {%- endif -%}
            <div class="wt-footer__social-icons">
              {% render 'social-links' %}
            </div>
          </section>
        </div>
      {% endfor %}
    </div>

    <!-- Desktop Row 3 / Mobile Rows 4-5: Disclaimer + Payment -->
    <div class="wt-footer__row wt-footer__row--secondary">
      <!-- Payment Icons -->
      {% for payment_block in payment_blocks %}
        <div class="wt-footer__grid-item wt-footer__grid-item--payment">
          <section class="wt-footer__payment">
            <div class="wt-footer__payment-icons">
              <ul class="wt-footer__aside-list" role="list">
                {%- for type in shop.enabled_payment_types -%}
                  <li class="wt-footer__aside-list__item">
                    {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                  </li>
                {%- endfor -%}
              </ul>
            </div>
          </section>
        </div>
      {% endfor %}
      
      <!-- Disclaimer -->
      {% for disclaimer_block in disclaimer_blocks %}
        <div class="wt-footer__grid-item wt-footer__grid-item--disclaimer">
          <section class="wt-footer__disclaimer">
            <div class="wt-footer__disclaimer-text rte">{{ disclaimer_block.settings.text }}</div>
          </section>
        </div>
      {% endfor %}
    </div>

    <!-- Desktop Row 4 / Mobile Rows 6-7: Policies + Copyright -->
    <div class="wt-footer__row wt-footer__row--footer">
      <div class="wt-footer__grid-item wt-footer__grid-item--copyright">
        {% if section.settings['show-copyright'] %}
          <p class="wt-footer__aside__copy">
            {{ section.settings.text }}
          </p>
        {% endif %}
      </div>
      
      <div class="wt-footer__grid-item wt-footer__grid-item--policies">
        {% assign policies_menu = linklists['policies'] %}
        
        <!-- Debug: Show if policies menu exists -->
        {% comment %}DEBUG: Policies menu size: {{ policies_menu.links.size }}{% endcomment %}
        
        {% if policies_menu.links.size > 0 %}
          <nav class="wt-footer__policies">
            <ul class="wt-footer__policies-list">
              {%- for link in policies_menu.links -%}
                <li class="wt-footer__policies-item">
                  <a href="{{ link.url }}" class="wt-footer__policies-link">
                    <span class="slide-wrapper">
                      <span class="slide-text">{{ link.title }}</span>
                      <span class="slide-text">{{ link.title }}</span>
                    </span>
                  </a>
                </li>
              {%- endfor -%}
            </ul>
          </nav>
        {% else %}
          <!-- Fallback: Show test links if no policies menu -->
          <nav class="wt-footer__policies">
            <ul class="wt-footer__policies-list">
              <li class="wt-footer__policies-item">
                <a href="/pages/privacy-policy" class="wt-footer__policies-link">
                  <span class="slide-wrapper">
                    <span class="slide-text">Privacy Policy</span>
                    <span class="slide-text">Privacy Policy</span>
                  </span>
                </a>
              </li>
              <li class="wt-footer__policies-item">
                <a href="/pages/terms-of-service" class="wt-footer__policies-link">
                  <span class="slide-wrapper">
                    <span class="slide-text">Terms of Service</span>
                    <span class="slide-text">Terms of Service</span>
                  </span>
                </a>
              </li>
              <li class="wt-footer__policies-item">
                <a href="/pages/refund-policy" class="wt-footer__policies-link">
                  <span class="slide-wrapper">
                    <span class="slide-text">Refund Policy</span>
                    <span class="slide-text">Refund Policy</span>
                  </span>
                </a>
              </li>
            </ul>
          </nav>
        {% endif %}
        
        <!-- Localization selectors as additional option -->
        {% if section.settings.show_country_selector or section.settings.show_language_selector %}
          <div class="wt-footer__localization__triggers">
            {% if section.settings.show_country_selector -%}
              {%- render 'localization-btn-local',
                show_country_code: section.settings.show_country_selector_label,
                show_country_flag: section.settings.show_country_selector_flag
              -%}
            {%- endif %}
            {% if section.settings.show_language_selector %}{% render 'localization-btn-lang' %}{% endif %}
          </div>
        {% endif %}
      </div>
    </div>

    <!-- Legacy blocks (text, image, custom_liquid, @app) -->
    <div class="wt-footer__row wt-footer__row--legacy">
      {% for block in other_blocks %}
        <div class="wt-footer__grid-item wt-footer__grid-item--legacy">
          {%- case block.type -%}
          {%- when '@app' -%}
            {% render block %}
          {%- when 'custom_liquid' -%}
            {{ block.settings.custom_liquid }}
          {%- when 'menu' -%}
            {% if block.settings.heading_links != empty %}
              <collapsible-section
                class="wt-footer__links wt-collapse"
                data-toggle-tabindex="button, [href], input, a"
                data-mobile-only
              >
                <div
                  class="wt-footer__title wt-collapse__trigger"
                  role="button"
                  tabindex="0"
                  data-open="false"
                  aria-expanded="false"
                  aria-controls="CollapsibleTab-{{ block.id }}"
                >
                  <div>{{ block.settings.heading_links }}</div>
                  <div class="wt-footer__title__icon wt-icon" aria-hidden="true">
                    {% render 'icons', id: 'plus' %}
                  </div>
                </div>
                <div class="wt-collapse__target wt-collapse__target--v2" id="CollapsibleTab-{{ block.id }}">
                  <ul class="wt-footer__list">
                    {%- for link in block.settings.links.links -%}
                      <li class="wt-footer__list__item">
                        <a href="{{ link.url }}" class="{% if link.active %} list-menu__item--active{% endif %}">
                          <span class="wt-footer__list__item__text--underline slide-wrapper">
                          <span class="slide-text">{{ link.title }}</span>
                          <span class="slide-text">{{ link.title }}</span>
                        </span>
                        </a>
                      </li>
                    {%- endfor -%}
                  </ul>
                </div>
              </collapsible-section>
            {% else %}
              <div class="wt-footer__links wt-footer__links--no-heading">
                <ul class="wt-footer__list">
                  {%- for link in block.settings.links.links -%}
                    <li class="wt-footer__list__item">
                      <a href="{{ link.url }}" class="{% if link.active %} list-menu__item--active{% endif %}">
                        <span class="wt-footer__list__item__text--underline slide-wrapper">
                          <span class="slide-text">{{ link.title }}</span>
                          <span class="slide-text">{{ link.title }}</span>
                        </span>
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            {% endif %}

          {%- when 'text' -%}
            <section class="wt-footer__msg{% if block.settings.heading_text == blank %} wt-footer__msg--no-heading{% endif %}">
              {%- if block.settings.heading_text != blank -%}
                <div class="wt-footer__title">{{ block.settings.heading_text }}</div>
              {%- endif -%}
              <div class="wt-footer__text rte">{{ block.settings.text }}</div>
            </section>

          {%- when 'image' -%}
            <section class="wt-footer__msg" data-block-id="{{ block.id }}">
              {% if block.settings.desktop_image != blank %}
                {% assign alt_text = block.settings.desktop_image.alt | escape %}
                {{
                  block.settings.desktop_image
                  | image_url: width: 750
                  | image_tag:
                    loading: 'lazy',
                    sizes: '(min-width: 750px) 750px, 320px',
                    widths: '750, 1500, 3000',
                    alt: alt_text,
                    class: 'wt-footer__image'
                }}
              {% else %}
                {{ 'collection-apparel-2' | placeholder_svg_tag: 'wt-footer__image' }}
              {% endif %}
            </section>

          {%- when 'newsletter' -%}
            <section class="wt-newsletter wt-footer__additional">
              <div class="wt-footer__title wt-newsletter__title">{{ block.settings.heading_newsletter }}</div>
              <div class="wt-footer__text rte">{{ block.settings.text_newsletter }}</div>

              {% form 'customer', class: 'newsletter-form wt-newsletter__form wt-footer__additional__form' %}
                <input type="hidden" name="contact[tags]" value="newsletter">

                <div class="wt-newsletter__fieldset">
                  <input
                    id="NewsletterForm--{{ section.id }}"
                    type="email"
                    name="contact[email]"
                    class="wt-newsletter__field"
                    value="{{ form.email }}"
                    aria-required="true"
                    autocorrect="off"
                    autocapitalize="off"
                    autocomplete="email"
                    placeholder="{{ 'newsletter.label' | t }}"
                    required
                  >

                  <button
                    type="submit"
                    class="wt-newsletter__send wt-newsletter__send--{{ block.settings.button_type }}"
                    name="commit"
                    aria-label="{{ 'newsletter.button_label' | t }}"
                  >
                    <span class="wt-newsletter__send__text">
                      {{ 'newsletter.button_label' | t }}
                    </span>
                  </button>
                </div>

                {%- if form.errors -%}
                  {% for error in form.errors %}
                    <small class="newsletter-form__message form__message" id="Newsletter-error--{{ section.id }}">
                      {%- render 'icon-error' -%}
                      {% if error == 'form' %}
                        {{ form.errors.messages[error] }}
                      {% else %}
                        {{ form.errors.translated_fields[error] }} - {{ form.errors.messages[error] }}
                      {% endif %}
                    </small>
                  {% endfor %}
                {%- endif -%}

                {%- if form.posted_successfully? -%}
                  <div class="form__message">
                    <div class="form__success-field" tabindex="-1" autofocus>
                      <p>{{- 'newsletter.success' | t }}</p>
                    </div>
                  </div>
                {%- endif -%}
              {% endform %}
            </section>

          {%- when 'social_links' -%}
            <section class="wt-footer__social">
              {%- if block.settings.heading != blank -%}
                <div class="wt-footer__title">{{ block.settings.heading }}</div>
              {%- endif -%}
              <div class="wt-footer__social-icons">
                {% render 'social-links' %}
              </div>
            </section>

          {%- when 'payment_icons' -%}
            <section class="wt-footer__payment">
              <div class="wt-footer__payment-icons">
                <ul class="wt-footer__aside-list" role="list">
                  {%- for type in shop.enabled_payment_types -%}
                    <li class="wt-footer__aside-list__item">
                      {{ type | payment_type_svg_tag: class: 'icon icon--full-color' }}
                    </li>
                  {%- endfor -%}
                </ul>
              </div>
            </section>

          {%- when 'disclaimer' -%}
            <section class="wt-footer__disclaimer">
              <div class="wt-footer__disclaimer-text rte">{{ block.settings.text }}</div>
            </section>
        {%- endcase -%}
      </div>
    {%- endfor -%}
  </div>


  {% if section.settings['big-logo'] != null %}
    <div class="wt-footer__big-logo">
      {% assign big_logo = section.settings['big-logo'] | get_image %}
      {% assign alt_text = big_logo.alt | default: big_logo.filename | escape %}
      {{
        section.settings['big-logo']
        | image_url: width: 3840
        | image_tag:
          loading: 'lazy',
          widths: '375, 750, 1100, 1500, 1780, 2000, 3000, 3840',
          alt: alt_text,
          class: 'wt-footer__big-logo-img',
          sizes: '100vw'
      }}
    </div>
  {% endif %}
</footer>

{% schema %}
{
  "name": "t:sections.footer.name",
  "tag": "section",
  "max_blocks": 5,
  "settings": [
    {
      "type": "header",
      "content": "t:sections.footer.settings.social_media_icons.content",
      "info": "t:sections.footer.settings.social_media_icons.info"
    },
    {
      "type": "checkbox",
      "id": "show-social-media-icons",
      "label": "t:sections.footer.settings.show-social-media-icons.label",
      "default": true
    },
    {
      "type": "header",
      "content": "t:sections.header.settings.country_region_selector.label",
      "info": "t:sections.header.settings.country_region_selector.info"
