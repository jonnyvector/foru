{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}

{% assign background_section_rgb = section.settings['section-color-overlay'] | color_to_rgb %}
{% assign heading_rgb = section.settings['section-color-body-text'] | color_to_rgb %}

<style>
    section[id="shopify-section-{{ section.id }}"]{
        {% if background_section_rgb != 'rgba(0, 0, 0, 0.0)' %}
            --color-overlay-rgb: {{ section.settings.section-color-overlay | color_to_rgb | remove: 'rgb(' | remove: ')' }};
            --color-overlay-opacity: {{ section.settings.section-color-overlay-opacity | divided_by: 100.0 }};
        {% endif %}
    }

    section[id="shopify-section-{{ section.id }}"] .headline__title{
      {% if heading_rgb != 'rgba(0, 0, 0, 0.0)' %}
        --color-custom-text: {{ section.settings.section-color-body-text }};
      {% endif %}
    }

  [data-section-id="{{ section.id }}"]
  {
      {% if section.settings.full-width-enabled %}
        --border-radius: 0;
      {% endif %}

      {% if section.settings.margin-top %}
        --section-gap-top: {{ section.settings.margin-top }}px;
      {% endif %}

      {% if section.settings.margin-bottom %}
        --section-gap-bottom: {{ section.settings.margin-bottom }}px;
      {% endif %}
  }

  /* Main grid layout */
  [data-section-id="{{ section.id }}"] .ingredient-cards-grid {
    display: grid;
    gap: calc(var(--gap, 8px) * 3);
    grid-template-columns: 1fr;
  }

  @media (min-width: 750px) {
    [data-section-id="{{ section.id }}"] .ingredient-cards-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: calc(var(--gap, 8px) * 4);
    }
  }

  @media (min-width: 1200px) {
    [data-section-id="{{ section.id }}"] .ingredient-cards-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  /* Individual ingredient card */
  [data-section-id="{{ section.id }}"] .ingredient-card {
    background-color: {% if section.settings.card-background-color != 'transparent' %}{{ section.settings.card-background-color }}{% else %}#f7f7f7{% endif %};
    padding: calc(var(--gap, 8px) * 3);
    border-radius: var(--border-radius);
    position: relative;
  }

  /* Card number */
  [data-section-id="{{ section.id }}"] .ingredient-card-number {
    font-family: var(--font-body);
    font-size: calc(var(--font-base-size) * 0.875);
    font-weight: var(--font-weight-medium, 500);
    color: var(--color-text, #666);
    margin: 0 0 calc(var(--gap, 8px) * 1.5) 0;
    opacity: 0.8;
  }

  /* Ingredient name */
  [data-section-id="{{ section.id }}"] .ingredient-card-title {
    font-family: var(--font-headline);
    font-size: calc(var(--font-h3-size) * {{ section.settings.title_size_mobile | divided_by: 100.0 }});
    font-weight: var(--font-headline-weight);
    color: var(--color-text, #000);
    text-transform: uppercase;
    line-height: 1.2;
    margin: 0 0 calc(var(--gap, 8px) * 2) 0;
  }

  @media (min-width: 750px) {
    [data-section-id="{{ section.id }}"] .ingredient-card-title {
      font-size: calc(var(--font-h3-size) * {{ section.settings.title_size_desktop | divided_by: 100.0 }});
    }
  }

  /* Benefits list */
  [data-section-id="{{ section.id }}"] .ingredient-card-benefits {
    font-family: var(--font-body);
    font-size: calc(var(--font-base-size) * 0.875);
    line-height: 1.5;
    color: var(--color-text, #333);
  }

  [data-section-id="{{ section.id }}"] .ingredient-card-benefits ul {
    margin: 0;
    padding: 0;
    list-style: none;
  }

  [data-section-id="{{ section.id }}"] .ingredient-card-benefits li {
    margin-bottom: calc(var(--gap, 8px) * 1.5);
    position: relative;
    padding-left: calc(var(--gap, 8px) * 2);
  }

  [data-section-id="{{ section.id }}"] .ingredient-card-benefits li:last-child {
    margin-bottom: 0;
  }

  [data-section-id="{{ section.id }}"] .ingredient-card-benefits li::before {
    content: "‚óè";
    position: absolute;
    left: 0;
    color: var(--color-text, #000);
    font-weight: var(--font-weight-bold, bold);
  }

  /* Mobile adjustments */
  @media (max-width: 749px) {
    [data-section-id="{{ section.id }}"] .ingredient-card {
      padding: calc(var(--gap, 8px) * 2);
    }
  }
</style>

{% if section.settings['full-width-enabled'] %}
  {% assign customwrapperclass = 'hero__wrapper--full' %}
{% else %}
  {% assign customwrapperclass = 'hero__wrapper' %}
{% endif %}

<div
  data-section-id="{{ section.id }}"
  class="{{ customwrapperclass }} {% if settings.animations %} scroll-trigger animate--slide-in {% endif %} {% if settings.disabled_animations_on_mobile %} disabled-on-mobile {% endif %}"
>
  {% if section.settings.title != blank %}
    {% render 'headline', title: section.settings.title %}
  {% endif %}
  
  <div class="{% if settings.animations %} scroll-trigger animate--slide-in {% endif %} {% if settings.disabled_animations_on_mobile %} disabled-on-mobile {% endif %}">
    {% if section.blocks.size > 0 %}
      <div class="ingredient-cards-grid">
        {% for block in section.blocks %}
          {% if block.type == 'ingredient_card' %}
            <div class="ingredient-card" data-block-id="{{ block.id }}">
              {% if block.settings.number != blank %}
                <div class="ingredient-card-number">{{ block.settings.number }}</div>
              {% endif %}
              {% if block.settings.ingredient_name != blank %}
                <h3 class="ingredient-card-title">{{ block.settings.ingredient_name }}</h3>
              {% endif %}
              {% if block.settings.benefits_list != blank %}
                <div class="ingredient-card-benefits">
                  {{ block.settings.benefits_list }}
                </div>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>
    {% endif %}
  </div>
</div>

