{% comment %} Quick add button for variant context - redirect to product page with variant pre-selected {% endcomment %}
{%- if card_variant.available -%}
  {% assign button_text = 'products.product.add_to_cart' | t %}
{%- else -%}
  {% assign button_text = 'products.product.sold_out' | t %}
{%- endif -%}

{% render 'custom-button-loadable'
  , text: button_text
  , type: 'link'
  , url: product.url | append: '?variant=' | append: card_variant.id
  , style: 'secondary'
  , class: 'button--full-width'
  , aria_label: button_text
  , disabled: card_variant.available == false
  , id: product.handle | append: '-' | append: card_variant.id
  , align: 'center'
%}