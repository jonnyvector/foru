{%- comment -%}
  Extract a style from the color swatch config. You must passed two parameters to this snippet:

  - color_swatch_config: extracted from the theme settings
  - value: the actual color
  - taste_swatches_map_string: (optional) string map of taste handles to gradients
  - option_name: (optional) the product option name (e.g. "Taste", "Color")
{%- endcomment -%}
{% assign swatch_focal_point = null %}
{% assign color_swatch_style = null %}

{%- comment -%} Check if this is a Taste option and if we have metaobject data {%- endcomment -%}
{% if option_name and taste_swatches_map_string != blank %}
  {% assign option_name_downcase = option_name | downcase %}
  {% if option_name_downcase == 'taste' %}
    {%- comment -%} Get the handleized version of the taste value {%- endcomment -%}
    {% unless value.size > 0 %}
      {% assign value_to_check = value.value %}
    {% else %}
      {% assign value_to_check = value %}
    {% endunless %}
    {% assign taste_handle = value_to_check | handleize %}

    {%- comment -%} Parse the taste_swatches_map_string to find matching gradient {%- endcomment -%}
    {% assign taste_entries = taste_swatches_map_string | split: '||' %}
    {% for entry in taste_entries %}
      {% assign entry_parts = entry | split: '::' %}
      {% assign entry_handle = entry_parts[0] %}
      {% if entry_handle == taste_handle %}
        {% assign gradient_value = entry_parts[1] %}
        {% assign color_swatch_style = 'background: ' | append: gradient_value %}
        {% break %}
      {% endif %}
    {% endfor %}

    {%- comment -%} Debug - remove after testing {%- endcomment -%}
    {% unless color_swatch_style %}
      <!-- Swatch Debug: Looking for "{{ taste_handle }}" in map, option="{{ option_name }}" value="{{ value_to_check }}" -->
    {% endunless %}
  {% endif %}
{% endif %}

{%- comment -%} If no taste gradient found, fall back to normal swatch logic {%- endcomment -%}
{% if color_swatch_style == null %}
  {% if swatch_image %}
    {% assign image_url = swatch_image | image_url: width: 120 %}
    {% assign color_swatch_style = 'background-image: url(' | append: image_url | append: ');' %}
  {% elsif swatch_color %}
    {% assign color_swatch_style = 'background-color: ' | append: swatch_color %}
  {% elsif value.swatch.image %}
    {% assign image_url = value.swatch.image | image_url: width: 120 %}
    {% assign swatch_focal_point = value.swatch.image.presentation.focal_point %}
    {% assign color_swatch_style = 'background-image: url('
      | append: image_url
      | append: '); background-position: '
      | append: swatch_focal_point
    %}
  {% elsif value.swatch.color %}
    {% assign color_swatch_style = 'background-color: rgb(' | append: value.swatch.color.rgb | append: ')' %}
  {% else %}
  {% comment %} it used for filters {% endcomment %}
  {% unless value.size > 0 %}
    {% assign value = value.value %}
  {% endunless %}

  {%- assign color_value_downcase = value | downcase -%}

  {% if only_color %}
    {%- assign color_swatch_style = color_value_downcase -%}
  {% else %}
    {%- assign color_swatch_style = 'background-color: ' | append: color_value_downcase -%}
  {% endif %}

  {%- for color_swatch_item in swatches_config -%}
    {%- assign color_swatch_parts = color_swatch_item | split: ':' -%}
    {%- assign color_swatch_name = color_swatch_parts.first | downcase | strip -%}
    {%- if color_value_downcase == color_swatch_name -%}
      {%- assign color_swatch_value = color_swatch_parts.last | strip -%}

      {%- if color_swatch_value contains '#' and only_color -%}
        {%- assign color_swatch_style = color_swatch_value -%}
      {%- elsif color_swatch_value contains '#' -%}
        {% assign color_swatch_size = color_swatch_value | size %}
        {% if color_swatch_size == 7 %}
          {%- assign color_swatch_style = 'background-color: ' | append: color_swatch_value -%}
        {% elsif color_swatch_size == 14 %}
          {% assign first_color = color_swatch_value | slice: 0, 7 %}
          {% assign second_color = color_swatch_value | slice: 7, 7 %}
          {%- assign color_swatch_style = 'background: linear-gradient(45deg, '
            | append: first_color
            | append: ' 50%, '
            | append: second_color
            | append: ' 50%);'
          -%}
        {% elsif color_swatch_size == 21 %}
          {% assign first_color = color_swatch_value | slice: 0, 7 %}
          {% assign second_color = color_swatch_value | slice: 7, 7 %}
          {% assign third_color = color_swatch_value | slice: 14, 7 %}
          {%- assign color_swatch_style = 'background: linear-gradient(45deg, '
            | append: first_color
            | append: ' 0% 35%, '
            | append: second_color
            | append: ' 35% 65%, '
            | append: third_color
            | append: ' 65% 100%);'
          -%}
        {% endif %}
      {%- elsif images[color_swatch_value] != blank -%}
        {%- assign color_swatch_image = images[color_swatch_value] | image_url: width: 72, height: 72 -%}
        {%- assign color_swatch_style = 'background-image: url(' | append: color_swatch_image | append: ');' -%}
      {%- endif -%}

      {%- break -%}
    {%- endif -%}
  {%- endfor -%}
  {% endif %}
{% endif %}

{{- color_swatch_style -}}
